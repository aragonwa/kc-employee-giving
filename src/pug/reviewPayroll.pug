extends includes/base
block whichtheme
  - var theme = 'corporate'
block isfullwidth
  - var colSize = 'col-md-12'
block breadcrumb
  // BREADCRUMB
  include includes/breadcrumb
block custom-style
  if production
    link(href="/css/custom.css" rel='stylesheet' type='text/css')
  else
    link(href="/styles/css/custom.css" rel='stylesheet' type='text/css')
block main-content
  .row.addon-row.addon-row-attached
    .col-sm-12
      .page-header
        h1 Payroll donation list
      p
        a(href="#")
          span.fa.fa-arrow-left
          | &nbsp;Add more non-profits
  .row.addon-row.addon-row-attached
    .col-sm-12
      p
        strong You will need to manually input donation amounts into Peoplesoft if you want your donations to be be taken from you paycheck. Print this list and use it to input them into Peoplesoft. The 4-digit non-profit number is what you will need.
      br
      .review-header
        p
          .fa.fa-gift &nbsp;
          | Payroll donation list
    .col-sm-12
      .review-cart
        .review-cart-items
          .media
            .media-left
              .fa.fa-times-circle.fa-color-danger
            .media-body
              ul.list-unstyled
                li
                  strong Angel Flight West
                li Employee giving ID# 9615
          .media
            .media-left
              .fa.fa-times-circle.fa-color-danger
            .media-body
              ul.list-unstyled
                li
                  strong American Red Cross Serving King County
                li Employee giving ID# 32445
          .media
            .media-left
              .fa.fa-times-circle.fa-color-danger
            .media-body
              ul.list-unstyled
                li
                  strong Sierra Club Foundation
                li Employee giving ID# 2545
  .row.addon-row.addon-row-attached
    .col-sm-12
      p * There will be a service fee added at the time of payment based on the type of the payment chosen.
    .col-sm-12
      button.btn.btn-default Print list
      br
      br
      button.btn.btn-success
        .fa.fa-lock
        | &nbsp;Edit list in Peoplesoft
block custom-js
  if production
    script(src="/js/custom.js")
  else
    script(src="/js/custom.compiled.js")
